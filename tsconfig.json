{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"react": ["node_modules/preact/compat/src/index.js"],
			"react-dom": ["node_modules/preact/compat/src/index.js"],
			"@/*": ["./src/*"]
		}
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}